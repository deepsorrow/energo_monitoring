<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.GoToPlaceActivity">

    <ImageView
        android:id="@+id/clientLogoImage"
        android:layout_width="348dp"
        android:layout_height="83dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/energoLogoImage"
        app:srcCompat="@drawable/client_logo" />

    <ImageView
        android:id="@+id/energoLogoImage"
        android:layout_width="148dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/energo_logo" />

    <TextView
        android:id="@+id/takePhotoOfSchemeUUTE"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textAlignment="center"
        android:text="Необходимо проследовать на объект"
        app:layout_constraintStart_toStartOf="@+id/clientLogoImage"
        app:layout_constraintTop_toBottomOf="@+id/clientLogoImage"
        app:layout_constraintEnd_toEndOf="@id/clientLogoImage"/>

    <Button
        android:id="@+id/buttonContinue"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:text="Начать проверку"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/takePhotoOfSchemeUUTE"
        app:layout_constraintStart_toStartOf="@+id/takePhotoOfSchemeUUTE" />


</androidx.constraintlayout.widget.ConstraintLayout>